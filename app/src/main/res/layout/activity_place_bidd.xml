<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Place_bid.Place_bidd">


    <TextView
        android:id="@+id/time_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TIME"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/info_owner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Owner Name"
        android:textSize="30sp"
        android:layout_below="@+id/time_counter"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/info_pro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:textSize="30sp"
        android:layout_below="@+id/info_owner_name"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/info_pro_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:textSize="30sp"
        android:layout_below="@+id/info_pro_name"
        android:layout_marginTop="20dp"
        />

    <RadioButton
        android:id="@+id/check_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_pro_price"
        android:layout_marginTop="30dp"
        android:text="10% Surity check"
        android:textSize="30sp"/>


    <EditText
        android:id="@+id/bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_price"
        android:layout_marginTop="30dp"
        android:hint="ENTER YOUR BID"
        android:gravity="center"
        android:inputType="number"
        android:digits="0123456789"

        android:textSize="30sp"
        />
    <Button
        android:id="@+id/submit_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bid"
        android:text="SUBMIT"
        android:layout_marginTop="10dp"
        android:textSize="30sp"

        />
</RelativeLayout>