<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mobile_Phone.Mobile_Phone">


    <Button
        android:id="@+id/choosefile"
        android:layout_width="136dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Choose File"

        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="125dp"

        android:layout_toRightOf="@+id/choosefile"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/product_image"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Product Name"
        android:inputType="text"
        android:layout_below="@+id/choosefile"/>

    <EditText
        android:id="@+id/product_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="Product Camera"
        android:inputType="text"
        android:layout_below="@+id/product_name"
        />
    <EditText
        android:id="@+id/product_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="15dp"
        android:hint="Product Battery"
        android:inputType="text"
        android:layout_toRightOf="@+id/product_camera"
        android:layout_below="@+id/product_image"
        />

    <EditText
        android:id="@+id/product_Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Product Storage"
        android:inputType="text"
        android:layout_below="@+id/product_camera"
        />

    <EditText
        android:id="@+id/product_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="5dp"
        android:hint="Product Ram"
        android:inputType="text"
        android:layout_toRightOf="@+id/product_Storage"
        android:layout_below="@+id/product_battery"
        />
    <EditText
        android:id="@+id/product_processor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="5dp"
        android:hint="Processore"
        android:inputType="text"
        android:layout_toRightOf="@+id/product_ram"
        android:layout_below="@+id/product_battery"
        />

    <ImageView
        android:id="@+id/date_image"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_below="@+id/product_Storage"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/date"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="283dp"
        android:layout_height="31dp"
        android:layout_below="@+id/product_Storage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/date_image"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="DATE" />


    <ImageView
        android:id="@+id/start_image"
        android:layout_width="68dp"
        android:layout_height="43dp"
        android:layout_below="@+id/date_image"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/time"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/Start_time"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/start_image"
        android:layout_alignStart="@+id/date"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Start_Time" />

    <ImageView
        android:id="@+id/end_image"
        android:layout_width="68dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@+id/Start_time"
        android:layout_alignTop="@+id/start_image"
       android:layout_marginLeft="4dp"

        app:srcCompat="@drawable/time"

       />

    <TextView
        android:id="@+id/End_time"
        android:layout_width="120dp"
        android:layout_height="31dp"

        android:layout_alignBottom="@+id/start_image"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="END_Time" />

    <EditText
        android:id="@+id/product_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Product Amount"

        android:gravity="center_horizontal"
        android:inputType="number"
        android:digits="0123456789."
        android:layout_below="@+id/start_image"
        />

    <Button
        android:id="@+id/post"
        android:layout_width="136dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Post"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>