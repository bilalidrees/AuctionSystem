<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection_Panel.Bidder_Selection_Panel">


    <RelativeLayout
        android:id="@+id/categoryrv"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/textcatagory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="CATEGORIES"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/textcatagory"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:weightSum="6">

            <RadioButton
                android:id="@+id/radiomobile"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Mobile Phones"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <RadioButton
                android:id="@+id/radiofridge"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="Refrigerator"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold|italic" />


        </RadioGroup>


        <Button
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/radiogroup"
            android:layout_marginBottom="14dp"
            android:text="Proceed"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/selectionrL"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:layout_below="@+id/categoryrv"
        android:layout_marginTop="-17dp"
        android:visibility="invisible">


        <Button
            android:id="@+id/live_auction"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="25dp"
            android:text="Live Auction"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/upcoming_auction"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/live_auction"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="2dp"
            android:text="Upcoming Auction"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/check_winning_status"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_below="@+id/upcoming_auction"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="2dp"
            android:text="CHECK STATUS OF BID"
            android:textSize="25dp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>